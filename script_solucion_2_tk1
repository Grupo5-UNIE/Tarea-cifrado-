def block_text(text, block_size=5):
  """
  Blocks a given text into chunks of specified size, separated by spaces.

  Args:
    text: The input text to be blocked.
    block_size: The desired size of each block.

  Returns:
    The blocked text as a string.
  """

  result = ""
  for i in range(0, len(text), block_size):
    result += text[i:i+block_size] + " "
  return result.strip()

text = ""

blocked_text = block_text(text, 5)
print(blocked_text)
